{
    "compilerOptions": {
      "baseUrl": ".",
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "removeComments": true,
      "noImplicitAny": false,
      "outDir": "features/"
    },
    "exclude": [
      "node_modules"
    ],
    "compileOnSave": false
}  